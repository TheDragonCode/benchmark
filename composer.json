{
    "name": "dragon-code/benchmark",
    "description": "Simple comparison of code execution speed between different options",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "benchmark",
        "runtime",
        "comparison",
        "comparison-tool",
        "time",
        "timer",
        "comparator",
        "comparators",
        "speed",
        "speedtest"
    ],
    "authors": [
        {
            "name": "Andrey Helldar",
            "email": "helldar@dragon-code.pro",
            "homepage": "https://dragon-code.pro"
        }
    ],
    "support": {
        "issues": "https://github.com/TheDragonCode/benchmark/issues",
        "source": "https://github.com/TheDragonCode/benchmark"
    },
    "funding": [
        {
            "type": "boosty",
            "url": "https://boosty.to/dragon-code"
        },
        {
            "type": "yoomoney",
            "url": "https://yoomoney.ru/to/410012608840929"
        }
    ],
    "require": {
        "php": "^8.2",
        "symfony/polyfill-php85": "^1.33"
    },
    "require-dev": {
        "pestphp/pest": "^3.8 || ^4.0",
        "symfony/var-dumper": "^7.0 || ^8.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "DragonCode\\Benchmark\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "laravel/pint": true,
            "pestphp/pest-plugin": true
        },
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": "php -d xdebug.mode=off -d xdebug.start_with_request=no vendor/bin/pest",
        "test:coverage": "php -d xdebug.mode=coverage -d xdebug.start_with_request=no vendor/bin/pest --coverage",
        "test:profile": "php -d xdebug.mode=profile -d xdebug.start_with_request=no vendor/bin/pest"
    }
}
